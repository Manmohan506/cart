@Library('roboshop') _

pipeline{

    agent {
        label 'NODEJS'
    }

    stages {
         stage('Download Dependencies') {
        steps {
            sh '''
            npm install
        '''
        }
    }

        stage('prepare Artifacts') {
            steps {
                sh '''
                zip -r cart.zip *
               '''
            }

        }
        stage('upload Artifacts') {
            steps {
                sh '''
           curl -f -v -u admin:DevOps321 --upload-file cart.zip http://172.31.13.99:8081/repository/cart/cart.zip
          '''
            }
        }
    }
}